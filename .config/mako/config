#сортировка уведомлений
sort=-time

#слой на котором будет запущенно уведомление
layer=overlay

#цвет фона
background-color=#282828

#ширина уведомления
width=300

#высота уведомления
height=110

#размер рамки
border-size=0

#цвет рамки
border-color=#f4d9e1

#радиус скругления
border-radius=15

#отображение иконок, есле 0 то выключенно
icons=1

#максимальный размер иконки
max-icon-size=32

#время отображения уведомления в милисекундах
default-timeout=6000

#яхз что такое
ignore-timeout=1

#настройка шрифта
font=FiraCode Nerd Font mono 10

#цвет рамки для уведомлений разной степени важности:
[urgency=high]
default-timeout=0

[category=mpd]
default-timeout=2000
group-by=category
