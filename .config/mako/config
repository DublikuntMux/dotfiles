#сортировка уведомлений
sort=-time

#слой на котором будет запущенно уведомление
layer=overlay

#цвет фона
background-color=#1E1E2E

#ширина уведомления
width=300

#высота уведомления
height=110

#размер рамки
border-size=0

#цвет рамки
border-color=#F5C2E7

#радиус скругления
border-radius=15

#отображение иконок, есле 0 то выключенно
icons=1

#максимальный размер иконки
max-icon-size=32

#время отображения уведомления в милисекундах
default-timeout=6000

#яхз что такое
ignore-timeout=1

#настройка шрифта
font=FiraCode Nerd Font mono 10


#цвет рамки для уведомлений разной степени важности:

[urgency=low]
background-color=#1E1E2E

[urgency=normal]
background-color=#1E1E2E

[urgency=high]
background-color=#1E1E2E
border-color=#FAB387
default-timeout=0

[category=mpd]
default-timeout=2000
group-by=category
